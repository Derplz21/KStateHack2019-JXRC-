import pygame
import random
import sys
win_w = 600
win_h = 600
screen = pygame.display.set_mode((win_w, win_h))
pygame.display.set_caption('combat')
pygame.init()
Blue = (0, 0, 255)
Yellow = (255, 255, 0)
Red = (255, 0, 0)
White = (255, 255, 255)
successful_attack = 0
successful_enemy_attack = False
class Enemy(pygame.sprite.Sprite):
    def __init__(self, x, y):
        super().__init__()
        self.image = pygame.Surface([100, 100])
        self.image.fill(Red)
        self.rect = self.image.get_rect()
        self.rect.x = x
        self.rect.y = y
        self.health = 100
        self.turn = 0
    def draw(self, surface):
        surface.blit(self.image, (self.rect.x, self.rect.y))

    def handle_attack(self):
        if self.turn == 0:
            attack = random.randint(1, 10)
            if attack > 5:
                self.turn += 1
                successful_enemy_attack = True
                print('enemy_hit')
            if attack < 5:
                self.turn += 1
                print('enemy missed')
 
class Player(pygame.sprite.Sprite):
    def __init__(self):
        self.health = 100
        self.damage = 10
        self.last_shot = 0
        self.attacks = 10
        self.attack_delay = 1
        self.turn = 0
    def handle_attack(self):
        global successful_attack
        for event in pygame.event.get():
            if event.type == pygame.KEYDOWN:
                if event.key==pygame.K_c:
                    if self.turn == 0:
                        attack = random.randint(1, 10)
                        if attack > 5:
                            successful_attack += 1
                            self.turn = 1
                            player_turn_end = True
                            print('hit enemy')
                        else:
                            print('hit failed')
                            self.turn = 1
                elif event.key==pygame.K_f:
                    if self.turn == 0:
                        fleeing = random.randint(1, 10)
                        if fleeing > 8:
                            pass
                            print('fleed')
                            self.turn = 1
                            # return to walking 
                        else:
                            print('failed fleed')
                            self.turn = 1

                elif event.key==pygame.K_b:
                    if self.turn == 0:
                        bargaining = random.randint(1, 10)
                        if bargaining > 6:
                            print(bargaining)
                            print('you saved your life, good job :)')
                            self.turn = 1
                        else:
                            self.turn = 1
                            print(bargaining)
                     

                               
player = Player()
enemy = Enemy(0, 0)

def init_combat():
   for i in range(1):
        enemy_turn = random.randint(0, 1)
        player_turn = random.randint(0, 1)
        if enemy_turn > player_turn:
             enemy.turn = 0
             player.turn = 1
             ran = True
        elif player_turn > enemy_turn:
            player.turn = 0
            enemy.turn = 1
            ran = True
        elif player_turn == enemy_turn:
            enemy.turn = 0
            player.turn = 1

def continue_combat():
    if player.turn == 0:
        enemy.turn = 1
    if enemy.turn == 0:
        player.turn = 1
    
    
        

def draw_text(surface, text, size, x, y, color):
    '''draw text to screen'''
    font = pygame.font.Font('freesansbold.ttf', size)
    text_surface = font.render(text, True, color)
    text_rect = text_surface.get_rect()
    text_rect.midtop = (x, y)
    surface.blit(text_surface, text_rect)



def add_tags():
    turn = '0'
    if player.turn == 0:
        turn = 'player Turn'
    elif enemy.turn == 0:
        turn = 'enemy turn'
    # actions
    
    
        
    draw_text(screen, turn, 10, win_w//2, win_h//2 + 100, Blue)
    draw_text(screen, 'enemy hp: ' + str(enemy.health), 10, win_w//2, win_h//2 + 125, Blue)
    draw_text(screen, 'player hp: ' + str(player.health), 10, win_w//2, win_h//2 + 150, Blue)
    

def key_captions():
    draw_text(screen, 'press [f] to flee', 10, win_w//2 - 100, win_h//2 + 50, Blue)
    draw_text(screen, 'press [c] for combat', 10, win_w//2, win_h//2 + 50, Blue)
    draw_text(screen, 'press [b] to baragin', 10, win_w//2 + 110, win_h//2 + 50, Blue)


# sprite list
allsprites = pygame.sprite.Group()
clock = pygame.time.Clock()

def init_sprites():
    enemy = Enemy(win_w //2 - 50 , win_h //2 - 120)
    allsprites.add(enemy)
   




    
def main():
    running = True
    while running:
        for event in pygame.event.get():
                if event.type == pygame.QUIT:
                    pygame.quit()
                    sys.exit() 
                    running = False


       

        for enemies in allsprites:
            global successful_attack
            if enemy.health != 0 and successful_attack == 1:
                enemy.health -= player.damage
                sucessful_attack = 0
                print(enemy.health)
        for player in allsprites:
              global successful_enemy_attack
              if player.health !=0 and successful_enemy_attack  == True:
                  player.health -= enemy.damage
                  succesful_attack = 0
                  print(player.health)
              
              
              

        screen.fill((0,0,0))
        init_sprites()
        key_captions()
        init_combat()
        continue_combat()
        enemy.handle_attack()
        player = Player()
        add_tags() 
        player.handle_attack()
        allsprites.draw(screen)
        pygame.display.update()
        
        clock.tick(60)

main()
 
